ui = true
disable_mlock = "true"

storage "raft" {
  path    = "/vault/data"
  node_id = "node1"
}

listener "tcp" {
  address = "[::]:8200"
  tls_disable = "false"
  tls_cert_file = "/certs/server-cert.crt"
  tls_key_file  = "/certs/server-key.key"
  tls_disable_client_certs = "true"
}

api_addr = "https://{{ VAULT_CLUSTER_ADDR }}:8200"
cluster_addr = "https://{{ VAULT_CLUSTER_ADDR }}:8201"