Vagrant.configure("2") do |config|
  config.vm.box = "generic/ubuntu2004"
  config.vm.define "local" do |node|
    node.vm.host_name = "test-1"
    node.vm.network "public_network", bridge: ["eno1"] ,ip: "192.168.4.250"
  end



  config.vm.provider "virtualbox" do |vb|
    vb.name= "test-1"
    vb.memory = "1024"
    vb.cpus = 2
  end


  config.vm.provision "ansible" do |ansible|
    ansible.playbook = "<Enter Path Ansible>"
  end

end
