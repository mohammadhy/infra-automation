Vagrant.configure("2") do |config|
  config.vm.box = "generic/ubuntu2004"
(1..3).each do |i|
  config.vm.define "server-#{i}" do |node|
    node.vm.host_name = "test-#{i}"
    node.vm.network "public_network", bridge: ["eno1"] ,ip: "192.168.4.#{i+200}"
  end
  config.vm.provider "virtualbox" do |vb|
    #vb.name= "test-#{i}"
    vb.memory = "1024"
    vb.cpus = 2
  end
end
  config.vm.provision "ansible" do |ansible|
    ansible.playbook = "/home/user/Desktop/main.yaml"
  end

end
